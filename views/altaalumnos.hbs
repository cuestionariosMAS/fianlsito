<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

    <title>Alta de alumnos</title>
  </head>
  <body style="background-color: antiquewhite;">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>

  <form method="post" action="/alumnos/alta">
      <div class="form-group">
        <label for="leg_alumno">Legajo del alumno: </label>
        <input type="leg_alumno" class="form-control" id="leg_alumno" name="leg_alumno">
      </div>
      <div class="form-group">
        <label for="apyn_alumno">Nombre y Apellido del alumno: </label>
        <input type="text" class="form-control" id="apyn_alumno" name="apyn_alumno">
      </div>
      <div class="form-group">
        <label for="dom_alumno">Domicilio del alumno: </label>
        <input type="text" class="form-control" id="dom_alumno" name="dom_alumno">
      </div>
      <div class="form-group">
        <label for="cod_postal">Elegir una ciudad</label>
        <select class="form-control" id="cod_postal" name="cod_postal">
          <option value="7600">Mar Del Plata</option>
          <option value="7601">Batan</option>
          <option value="8000">Bahia Blanca</option>
        </select>
      </div>
      <div class="form-group">
        <label for="fecha_nac_alumno">Fecha de nacimiento del alumno: </label>
        <input type="text" class="form-control" id="fecha_nac_alumno" name="fecha_nac_alumno" placeholder="yyyy-mm-dd">
      </div>
      <div class="form-group">
        <label for="email_alumno">Email del alumno:</label>
        <input type="text" class="form-control" id="email_alumno" name="email_alumno">
      </div>
      <div class="form-group">
        <label for="grupo_sang_alumno">Grupo sanguineo del alumno: </label>
        <input type="text" class="form-control" id="grupo_sang_alumno" name="grupo_sang_alumno">
      </div>
      <div class="form-group">
        <label for="tel_fijo_alumno">Telefono fijo del alumno: </label>
        <input type="text" class="form-control" id="tel_fijo_alumno" name="tel_fijo_alumno">
      </div>
      <div class="form-group">
        <label for="tel_movil_alumno">Telefono movil del alumno: </label>
        <input type="text" class="form-control" id="tel_movil_alumno" name="tel_movil_alumno">
      </div>
      <div class="form-group">
        <label for="dni_alumno">DNI del alumno: </label>
        <input type="text" class="form-control" id="dni_alumno" name="dni_alumno">
      </div>
      <button type="submit" class="btn btn-danger">Agregar +</button>
  </form>
 
  </body>
</html>